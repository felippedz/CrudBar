@model Crud0.Models.Login;
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
            <h1 class="text-center mb-4">Inicio de Sesión</h1>
            <form asp-action="Login" asp-controller="Acceso" method="post" action="/login">
                <!-- Campo de correo -->
                <div class="mb-3">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Correo" type="email" class="form-control" id="email" name="email" placeholder="correo@bar.com" required>
                </div>

                <!-- Campo de contraseña -->
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" name="password" placeholder="••••••••" required>
                </div>

                <!-- Botón de inicio de sesión -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </div>

                <!-- Enlace para recuperar contraseña -->
                @* <div class="text-center mt-3">
                    <a href="/recover-password" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                </div> *@
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (Opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
